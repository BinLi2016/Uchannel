<Window x:Class="UChannelDesignApp.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="U形槽设计软件" Height="768" Width="1024"
        Icon="app_icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 侧边栏 / 控制面板 -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="U形槽参数设置" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <Label Content="预设类型："/>
            <ComboBox x:Name="PresetCombo" SelectionChanged="PresetCombo_SelectionChanged">
                <ComboBoxItem Content="YU1" IsSelected="True"/>
                <ComboBoxItem Content="YU2"/>
                <ComboBoxItem Content="YU3"/>
                <ComboBoxItem Content="YU4"/>
                <ComboBoxItem Content="YU5"/>
            </ComboBox>

            <Label Content="内宽 (cm)：" Margin="0,10,0,0"/>
            <TextBox x:Name="WidthTextBox" Text="2225"/>

            <Label Content="内高 (cm)："/>
            <TextBox x:Name="HeightTextBox" Text="243.5"/>

            <Label Content="壁厚 (cm)："/>
            <TextBox x:Name="WallTTextBox" Text="30"/>

            <Label Content="底板厚度 (cm)："/>
            <TextBox x:Name="FloorTTextBox" Text="40"/>

            <Button x:Name="DrawButton" Content="计算并绘制" Margin="0,20,0,0" Padding="10" Click="DrawButton_Click"/>

            <Button x:Name="DrawLayoutSheetButton" Content="绘制U形槽布置图" Margin="0,10,0,0" Padding="10" Click="DrawLayoutSheetButton_Click"/>
 
            <Button x:Name="DrawDrainageMotorLaneButton" Content="绘制排水沟 (机动车道)" Margin="0,10,0,0" Padding="10" Click="DrawDrainageMotorLaneButton_Click"/>
             
            <TextBlock x:Name="StatusLabel" Text="状态：就绪" Margin="0,10,0,0" TextWrapping="Wrap" Foreground="Gray"/>
        </StackPanel>

        <!-- CAD 视图 -->
        <wv2:WebView2 x:Name="WebView" Grid.Column="1"/>
    </Grid>
</Window>
